<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg" style="width: 100%; max-width: 500px;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Cadastro</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { controller: "registration-form" }) do |f| %>

        <!-- Dropdown para selecionar o tipo de usuário -->
        <div class="mb-3">
          <%= f.label :role, "Eu sou...", class: "form-label" %>
          <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, { include_blank: 'Selecione um tipo de conta' }, class: "form-select", data: { action: "change->registration-form#toggleFields" } %>
          <% if resource.errors.include?(:role) %>
            <div class="text-danger small"><%= resource.errors.full_messages_for(:role).join(", ") %></div>
          <% end %>
        </div>

        <!-- SEÇÃO DE CAMPOS PARA ALUNO -->
        <div data-registration-form-target="alunoFields" class="d-none">
          <div class="mb-3">
            <%= f.label :nome, class: "form-label" %>
            <%= f.text_field :nome, class: "form-control" %>
            <% if resource.errors.include?(:nome) %><div class="text-danger small"><%= resource.errors.full_messages_for(:nome).join(", ") %></div><% end %>
          </div>
          <div class="mb-3">
            <%= f.label :cpf, class: "form-label" %>
            <%= f.telephone_field :cpf, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :data_nascimento, class: "form-label" %>
            <%= f.date_field :data_nascimento, class: "form-control" %>
          </div>
          <div class="mb-3">
            <label class="form-label">Selecione suas habilidades</label>
            <div class="border p-2 rounded" style="height: 200px; overflow-y: auto;">
              <%= f.collection_check_boxes :habilidade_ids, Habilidade.all, :id, :nome do |b| %>
                <div class="form-check">
                  <%= b.check_box(class: "form-check-input") %>
                  <%= b.label(class: "form-check-label") %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- SEÇÃO DE CAMPOS PARA EMPRESA -->
        <div data-registration-form-target="empresaFields" class="d-none">
          <div class="mb-3"><%= f.label :nome, "Nome da Empresa", class: "form-label" %><%= f.text_field :nome, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :cnpj, "CNPJ da Empresa", class: "form-label" %><%= f.telephone_field :cnpj, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :endereco, "Endereço da Empresa", class: "form-label" %><%= f.text_area :endereco, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :telefone, "Telefone de Contato", class: "form-label" %><%= f.telephone_field :telefone, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :pessoa_contato, "Pessoa de Contato", class: "form-label" %><%= f.text_field :pessoa_contato, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :atividade_principal, class: "form-label" %><%= f.text_field :atividade_principal, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :url_empresa, "URL da Empresa", class: "form-label" %><%= f.text_field :url_empresa, class: "form-control" %></div>
        </div>

        <!-- SEÇÃO DE CAMPOS PARA COORDENADOR -->
        <div data-registration-form-target="coordenadorFields" class="d-none">
          <div class="mb-3"><%= f.label :nome, class: "form-label" %><%= f.text_field :nome, class: "form-control" %></div>
          <div class="mb-3"><%= f.label :matricula, "Matrícula", class: "form-label" %><%= f.telephone_field :matricula, class: "form-control" %></div>
        </div>

        <hr class="my-3">

        <!-- CAMPOS COMUNS -->
        <div class="mb-3">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirmação da Senha", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="d-grid mt-4">
          <%= f.submit "Cadastrar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <hr class="my-4">
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
